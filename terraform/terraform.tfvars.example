# terraform/terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "myapp"
environment  = "dev"

# Networking Configuration
allowed_ssh_cidrs = ["0.0.0.0/0"] # Restrict this to your IP range in production
enable_nat_gateway = false         # Set to true if you need internet access for private subnets

# EC2 Configuration
instance_type     = "t3.micro"
instance_count    = 2
root_volume_size  = 20
app_port         = 3000

# SSH Key - Replace with your actual public key
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Database Configuration
postgres_version               = "15.4"
db_instance_class             = "db.t3.micro"
db_allocated_storage          = 20
db_max_allocated_storage      = 100
db_name                       = "appdb"
db_username                   = "dbadmin"
db_password                   = "SecurePassword123!" # Use a strong password
db_backup_retention_period    = 7
enable_performance_insights   = false
monitoring_interval          = 0 # Set to 60 for detailed monitoring

# S3 Configuration
s3_enable_versioning = true
s3_enable_encryption = true

# Load Balancer Configuration
enable_alb_logs = false # Set to true if you want ALB access logs

# Monitoring Configuration
log_retention_days = 14

# Additional Tags (optional)
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "Required"
}